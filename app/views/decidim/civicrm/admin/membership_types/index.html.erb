<div class="card">
  <div class="item_show__header item_show__header--with-action-option">
    <h2 class="item_show__header-title">
      <%= t(".title") %>

      <%= link_to t(".sync"), decidim_civicrm_admin.sync_membership_types_path, class: "button button__sm button__secondary" %>
    </h2>
  </div>
  <div class="table-scroll">
    <% if membership_types.any? %>
      <table class="table-list civicrm-membership-types">
        <thead>
          <tr>
            <th><%= t(".id") %></th>
            <th><%= t(".name") %></th>
            <th><%= t(".created_at") %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% membership_types.each do |membership_type| %>
            <tr>
              <td><%= membership_type.civicrm_membership_type_id %></td>
              <td><%= membership_type.name %></td>
              <td class="<%= last_sync_class(membership_type.created_at) %>"><%= l(membership_type.created_at, format: :decidim_short) if membership_type.created_at %></td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate membership_types, theme: "decidim" %>
    <% else %>
      <p class="alert">
        <%= t(".empty") %>
        <%= link_to t(".sync"), decidim_civicrm_admin.sync_membership_types_path %>
      </p>
    <% end %>
  </div>
</div>
